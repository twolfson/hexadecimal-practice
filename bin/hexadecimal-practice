#!/usr/bin/env node
// Load in our dependencies
var promptInput = require('prompt-input');
var program = require('commander');
var pkg = require('../package.json');
var HexadecimalPractice = require('../');

// Define our CLI
program
  .version(pkg.version)
  .option('--seed <seed>', 'Specify a seed to use for number generation')
  .option('--maximum-digits <digits>', 'Specify the maximum amount of digits to use (hexadecimal base)');
program.name = 'hexadecimal-practice';

// Process the arguments
program.parse(process.argv);

// Start asking some questions
var prompt = promptInput();
var practice = new HexadecimalPractice({
  seed: program.seed,
  maximumDigits: program.maximumDigits,
  prompt: function handlePrompt (questionInfo, done) {
    // Ask the question
    // var question = 'What is the answer for: ' + chalk.bold(questionInfo.aStr + ' + ' + questionInfo.bStr) + ' ?';
    var question = 'What is the answer for: {bold}' + questionInfo.aStr + ' + ' + questionInfo.bStr + '{reset} ?';
    prompt(question, function handleAnswer (answer) {
      done(null, answer);
    });
  }
});
function askAnotherQuestion() {
  practice.ask(askAnotherQuestion);
}
askAnotherQuestion();
